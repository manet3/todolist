<Application x:Class="ToDoList.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:ToDoList.Client.ViewModels.Common"
             StartupUri="Views/ToDoWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <viewmodels:ToDoViewModelResolver x:Key="ToDoViewModelResolver"/>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Styles\SimpleWindowStyle.xaml"/>
                <ResourceDictionary Source="Resources\Styles\SimpleStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
